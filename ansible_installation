apt update

apt install software-properties-common

apt-add-repository --yes --update ppa:ansible/ansible

apt install ansible
 
ansible --version

cd /etc/ansible

vi hosts

[nameofserver]
public_ip or privated_ip
[nameofserver:vars]
ansible_ssh_user= name of user
ansible_ssh_port= 22
ansible_private_key_file= /etc/ansibie/file.pem
